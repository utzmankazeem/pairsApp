<% title= "Edit Passenger" %>
<%- include("layout/head") %>

<div class="container">
    <div class="row my-4">
        <div class="col-md-12">
            <form action="/edit/<%-edit['_id']%>" method="POST">
                <h2>Edit Passengers</h2>                
            
                <div class="form--group">
                    <label>Firstname</label>
                    <input type="text" name="fname" class="form-control" value="<%- edit['fname'] %>">
                </div>
                <div class="form--group">
                    <label>Lastname</label>
                    <input type="text" name="lname" class="form-control" value="<%- edit['lname'] %>">
                </div>
                <div class="form--group">
                    <label>Gender</label> 
                    &nbsp; Male<input type="radio" name="sex" value="Male"
                    <% if(typeof sex !="undefined" && sex == checked){%> checked <%}%> >
                    &nbsp; Female<input type="radio" name="sex" value="Female"
                    <% if(typeof sex !="undefined" && sex == checked){%> checked <%}%> >
                </div>
                <div class="form--group">
                    <label>Mobile</label>
                    <input type="number" name="mobile" class="form-control" value="<%- edit['mobile'] %>">
                </div>
                <div class="form--group">
                    <label>Email</label>
                    <input type="email" name="email" class="form-control" value="<%- edit['email'] %>">
                </div>
                <div class="form--group">
                <% let dest=["Lagos", "Kano", "Abia", "Adamawa", "Borno", "Delta", "Edo", "Kaduna", "Osun"] %>
                <label>Destination <select name="destination"></label>
                    <option value="<%- edit['destination'] %>"><%- edit['destination'] %></option>
                <% dest.map((state) =>{ %>
                    <option value="<%-state%>"><%-state%></option>
                <% }) %>
                </select> 
                </div>
                <input type="hidden" name="edit" value="<%= edit %>">
                <button type="submit" class="btn btn-primary">update</button>
                <button type="cancel" class="btn btn-primary">cancel</button>
            </form>
        </div>
    </div>
<%- include("layout/foot.ejs") %>